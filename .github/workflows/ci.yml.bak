name: XXSERVICENAMEXX-pipeline

# Do not change any of these settings.
on:
  workflow_dispatch:
    inputs:
      java-version:
        description: |
          The version of the Java that is use to build the application
        required: false
        type: string
        default: 17
      env:
        required: true
        type: string
        default: dev
      sonar-required:
        required: true
        type: string
        default: false
      bump-level:
        required: false
        description: bump type [ major, minor, patch ]
        type: choice
        options:
          - patch
          - minor
          - major
          - ntg
        default: ntg
  push:
    branches: [ "main", "develop" ]
  pull_request:
    branches: [ "main", "develop" ]

jobs:
  pipeline:
    permissions:
      contents: read
      packages: write
    uses: adb/workflows/.github/workflows/java-backend-pipeline.yml@feature/DSO-224
    with:
      java-version: ${{inputs.java-version}}
      env: ${{ github.event_name != 'workflow_dispatch' && 'dev' || inputs.env }}
      sonar-required: ${{ github.event_name != 'workflow_dispatch' && 'true' || inputs.sonar-required }}
      bump-level: ${{ inputs.bump-level }}
    secrets: inherit